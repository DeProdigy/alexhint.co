@import "animate";
@import "one-scroll";

$font-color:          white;
$dark-color:          #222222;
$background-color:    #F24814;
$tint:                0.80;
$darker-tint:         0.90;

article {
  padding:            15%;
}

body {
  font-family:        'Lato', sans-serif;
  font-weight:        100;
  text-align:         center;
}

a {
  text-decoration:    none;
}

section {
  background:         $background-color;
  font-size:          1.25em;
  h1 {
    -webkit-animation-duration: 3s;
    -webkit-animation-delay: 1s;
    -moz-animation-duration: 3s;
    -moz-animation-delay: 1s;
    margin-top:       1%;
    font-size:        5rem;
    color:            $font-color;
    font-weight:      100;
    margin-bottom:    1%;
  }
  h2 {
    margin-top:       5%;
    font-size:        4rem;
    color:            $font-color;
    font-weight:      100;
    &:hover{
      color: RGBA(255,255,255,0.5)
    }
  }
  p {
    -webkit-animation-duration: 3s;
    -webkit-animation-delay: 2s;
    -moz-animation-duration: 3s;
    -moz-animation-delay: 3s;
    font-size:        1.6rem;
    color:            $font-color;
    margin-bottom:    3%;
    letter-spacing:   1.5px;
  }
}

.intro {
  font-size:          2rem;
  padding:            0 8rem;
  margin:             4rem 0;
}

.icon {
  -webkit-animation-duration: 3s;
  -webkit-animation-delay: 3s;
  -moz-animation-duration: 3s;
  -moz-animation-delay: 5s;
  padding:            25px;
  height:             50px;
  width:              50px;
  margin:             0;
}

.alex-hint {
  background:
  linear-gradient(
    RGBA(245.00, 71.00, 0.00, $tint),
    RGBA(245.00, 71.00, 0.00, $tint)
  );
}

.saffron {
  background:
  // top, transparent, faked with gradient
  linear-gradient(
    RGBA(194, 56, 36, $tint),
    RGBA(194, 56, 36, $tint)
  ),
  // bottom, image
  url( <%= asset_path('saffron.jpg') %>);
}

.viddy-o {
  background:
  // top, transparent, faked with gradient
  linear-gradient(
    RGBA(44.00, 62.00, 80.00, $darker-tint),
    RGBA(44.00, 62.00, 80.00, $darker-tint)
  ),
  // bottom, image
  url( <%= asset_path('viddyo.jpg') %>);
}

.magnetic {
  background:
  // top, transparent, faked with gradient
  linear-gradient(
    RGBA(138.00, 193.00, 220.00, $darker-tint + 0.05),
    RGBA(138.00, 193.00, 220.00, $darker-tint + 0.05)
  ),
  // bottom, image
  url( <%= asset_path('magnetic.jpg') %>);
}

.elsaurus {
  background:
  // top, transparent, faked with gradient
  linear-gradient(
    RGBA(155.00, 89.00, 182.00, $darker-tint + 0.03),
    RGBA(155.00, 89.00, 182.00, $darker-tint + 0.03)
  ),
  // bottom, image
  url( <%= asset_path('elsaurus.jpg') %>);
}
.video-player {
  position: fixed;
  top: -162px;
  left: 0px;
  bottom: 0px;
  right: 0px;
  z-index: -100;
  min-width: 100%;
}

.background {
  background-position:          center;
  background-size:              cover;
  background-repeat:            no-repeat;
}

p::selection {
  background: #ffb7b7;
}

p::-moz-selection {
  background: #ffb7b7;
}
